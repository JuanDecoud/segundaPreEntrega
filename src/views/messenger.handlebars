<div class ="container my-4">
    <div class ="d-flex flex-column my-4">
        <div id ="messengerBox" class ="d-flex flex-column border border-2 border-black"> 
            {{#each messages}}
                <div class ="mx-2 border border-1 border-white my-2">
                    <p>User: {{userMail}}</p>
                    <p>Message: {{messege}}</p>
                </div>
            {{/each}}
        </div>
        <div class ="container">
            <form>
                <div class="input-group mb-3 my-4 col-4">
                    <input   id ="iMessage" name ="message" type="text" class="form-control" placeholder="message" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <div class="input-group-append mx-2">
                        <button  id ="btnSend"class="btn btn-danger" type="">Enviar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script  src="/js/messenger.js"></script>
